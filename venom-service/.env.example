# Server
PORT=3000
NODE_ENV=production

# Security
API_KEY=your-secret-api-key-here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Venom Config
VENOM_HEADLESS=true
VENOM_USE_CHROME=true
VENOM_LOG_QR=false

# Sessions
SESSIONS_DIR=/sessions
MAX_SESSIONS=15

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Webhooks
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=1000
WEBHOOK_TIMEOUT_MS=10000

# Logging
LOG_LEVEL=info
